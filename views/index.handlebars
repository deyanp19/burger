<div class="container bg">

  <div class="row text-center justify-content-center">
    <div class="text-center col-sm-8" id="header">
      <h1>Burger App!
        <h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <br>
      <h2 class="text-center" id="card-display">Burgers to Devour</h2>

      <ul id="card-display">
        {{#each burgers}} {{#unless devoured}}
        <div class="row">
          <div class="col-sm-6 text-center">
            {{this.burger_name}}
          </div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn btn-info btn-sm devour-btn" type="submit">Devour it!</button>
          </form>
        </div>
        {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <br>
      <h2 class="text-center" id="card-display">Burgers Devoured</h2>

      <ul id="card-display">
        {{#each burgers}} {{#if this.devoured}}
        <div class="row">
          <div class="col-sm-8 text-center">
            {{this.burger_name}}
          </div>
          <form action="/burgers/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="remove" value="false">
            <button class="btn btn-danger btn-sm remove-btn" type="submit" data-id="{{id}}">Remove</button>
          </form>
        </div>
        {{/if}} {{/each}}
      </ul>
    </div>

  </div>

  <div class="row justify-content-center" id="burger-form">
    <div class="col-sm-6 text-center" id="card-display">
      <form action="/burgers" method="POST">
        <div class=form-group>
          <input class="form-control text-center" type="text" id="burger-input" name="burger_name" placeholder="Burger Name" required>
        </div>
        <button type="submit" class="btn btn-primary addBurgerBtn">Add Burger</button>
      </form>
    </div>
  </div>
</div>